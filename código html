<body>
    <h1>ChatPDF</h1>
    <input id="questionInput" type="text" placeholder="Digite aqui sua pergunta" />
    <button id="sendButton" onclick="handleQuestion()">Enviar</button>
    <div id="output"></div>

    <script>
       async function handleQuestion() {
    const question = document.getElementById('questionInput').value;
    if (question.trim() !== '') {
        const payload = {
            question: question,
            pdf_url: file_path  = 'https://raw.githubusercontent.com/Thamidanjos/Base_Resolucoes_/blob/main/Resolucoes_Unificadas%20(1)TESTE.pdf'// URL do PDF que você deseja processar
        };

        const response = await fetch('http://localhost:5000/ask', {  // Endereço do servidor Flask
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(payload)
        });

        const data = await response.json();
        displayResponse(data.answer);
    } else {
        document.getElementById('output').innerHTML = 'Por favor, insira uma pergunta.';
    }
}
function displayResponse(answer) {
    const outputDiv = document.getElementById('output');
    outputDiv.innerHTML = `
        <h3>Resposta:</h3>
        <p>${answer}</p>
        <br>
        <a href="${file_path}" download="Base_Resolucoes_IA.pdf">Baixar PDF</a>
    `;
}

    </script>
</body>
